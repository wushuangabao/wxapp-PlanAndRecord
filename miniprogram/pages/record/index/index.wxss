/* miniprogram/pages/record/index/index.wxss */

.record-list {
  display: flex;
  flex-direction: column;
  margin: 70rpx;
  margin-top: 10rpx;
  margin-bottom: 230rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  width: 590rpx;
  background-color: rgb(255, 255, 242);
  box-shadow: 6rpx 6rpx 16rpx 0px rgba(217, 219, 223, 0.5);
}

.record-desc {
  color: rgb(37, 37, 37) !important;
  font-size: 24rpx !important;
}

.time-long{
  color: rgb(58, 58, 58) !important;
  font-size: 22rpx !important;
}

.list-tag{
  margin-left: 8rpx;
}

.page-btn {
  width: 70rpx;
  height: 110rpx;
  position: fixed;
  top: 38%;
  z-index: 9;
  background-color: rgb(66, 117, 199);
  border: 1px solid rgb(66, 114, 192);
  display: flex;
  align-items: center;
  box-shadow: 0 0 26rpx 2px rgba(68, 71, 75, 0.507);
}

.page-pre {
  left: 0;
  border-radius: 0 80rpx 80rpx 0;
  justify-content: flex-start;
  padding-left: 10rpx;
}

.page-next {
  right: 0;
  border-radius: 80rpx 0 0 80rpx;
  justify-content: flex-end;
  padding-right: 10rpx;
}

.new-record {
  width: 710rpx;
  height: 74rpx;
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9;
  border-top: 1px solid yellowgreen;
  background-color: rgb(236, 255, 199);
  color: rgba(45, 97, 179, 1) !important;
  font-size: 24rpx;
  line-height: 42rpx;
}

.date-picker {
  width: 710rpx;
  height: 86rpx;
  padding: 20rpx;
  background-color: rgb(249, 255, 223);
  position: fixed;
  bottom: 114rpx;
  left: 0;
  z-index: 8;
  border-top: 1px solid yellowgreen;
  border-left: 1px solid yellowgreen;
  border-right: 1px solid yellowgreen;
}

.num {
  color: rgba(45, 97, 179, 1);
  font-size: 42rpx;
  font-style: italic;
}

.text {
  height: 32rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 32rpx;
  margin-top: 7rpx;
}

.button {
  background: rgba(223, 237, 255, 1) !important;
  box-shadow: 6rpx 6rpx 16rpx 0px rgba(229, 233, 239, 0.5) !important;
  color: rgba(45, 97, 179, 1) !important;
  margin-top: 20rpx;
}

.deleteBtn {
  margin-left: 300rpx;
  color: rgb(226, 50, 89) !important;
}

.popup {
  height: 500rpx;
  width: 750rpx;
  background: #fff;
  color: #555;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.time-selector {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin: 20rpx;
}

.tag-time{
  color: rgb(37, 92, 180);
  font-weight: bold;
}

.time-unit {
  margin-right: 25rpx;
}

.button {
  background: rgba(223, 237, 255, 1) !important;
  box-shadow: 6rpx 6rpx 16rpx 0px rgba(229, 233, 239, 0.5) !important;
  color: rgba(45, 97, 179, 1) !important;
  margin: 30rpx;
}

.action-title {
font-size:24rpx !important;
color:rgba(196,201,210,1) !important;
}